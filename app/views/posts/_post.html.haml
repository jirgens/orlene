.well.col-sm-10.col-sm-offset-1#post
  %h4#posttitle= link_to post.title, post_path(post)
  %br
  %h4.small= post.created_at.to_date.to_formatted_s(:long_ordinal)
  %br
  .col-sm-6.col-sm-offset-3#postbody
    %p= post.body
    %br/
  .row
    .img.img-responsive.center-block#postimage= image_tag post.image_url.to_s
    %br/
  .row
    .img.img-responsive.center-block#postimage= image_tag post.image2_url.to_s
    %br/
  .row
    .img.img-responsive.center-block#postimage= image_tag post.image3_url.to_s
    %br/
  - if current_user
    %h4= link_to 'Edit', edit_post_path(post)
    %h4= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure you want to delete this post?' }
    %br
  %br
  %br
  %br
