.container#contentimage
  .col-sm-12#portfolioshow
    =link_to albums_path, class: "btn btn-default" do
      %i.glyphicon.glyphicon-arrow-left.pull-left
    %br
    %br
    %img.img-responsive.center-block(src="#{@picture.photo}")
  %br
  %br
  %br
  .actions
    - if current_user
      %h4= link_to "(Remove Picture)", album_picture_path(@picture), :confirm => 'Are you sure you want to delete this photo?', :method => :delete
