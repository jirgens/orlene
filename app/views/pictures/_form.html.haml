%section#newphotos
  .form-horizontal
    = bootstrap_form_for(@picture, :html => {:multipart => true}) do |f|
      %p
      - if @picture.errors.any?
        #error_explanation
          %h2= "#{pluralize(@picture.errors.count, "error")} prohibited this picture from being saved:"
          %ul
            - @picture.errors.full_messages.each do |msg|
              %li= msg
      %p
        = f.file_field :photo
      %p
        = f.select :album_id, options_for_select(Album.all.map {|album| [album.title, album.id]})
        %br/
        %br/
      = f.submit 'Upload Picture', class: 'btn btn-primary'
